{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "declaration": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*",
                "src/common/*",
                "src/types/*",
                "src/utils/*",
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/**/*",
    ]
}
